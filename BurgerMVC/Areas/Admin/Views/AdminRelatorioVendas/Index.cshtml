
<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="RelatorioSimples">
            <fieldset>
                <legend>Relatorio de vendas</legend>
                <div class="form-group">
                    <label for="min" class="col-lg-2 control-label">data inicial</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="max" class="col-lg-2 control-label">data final</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

