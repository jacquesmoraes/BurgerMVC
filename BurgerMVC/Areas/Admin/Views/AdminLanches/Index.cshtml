@model ReflectionIT.Mvc.Paging.PagingList<BurgerMVC.Models.Lanche>

@{
    ViewData["Title"] = "Produtos";
}


<h1>@ViewData["Title"]</h1>

<form method="get" class="form-check-inline">
    <input name="filter" class="form-control" placeholder="filtro"
           value="@Model.RouteValue["filter"]" />
    <button type="submit" class="btn btn-info">
        procurar
    </button>

</form>
Total de Produtos: @Model.TotalRecordCount
<div class="pagination  justify-content-center m-auto">
    <vc:pager paging-list="@Model"></vc:pager>
</div>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a> |
    <a class="btn btn-info" asp-controller="AdminLancheReport" asp-action="LanchesCategoriaReport">
        gerar relatorio
    </a> |
    <a class="btn btn-light" asp-controller="AdminLancheReport" asp-action="LanchesCategoriaReportPdf">
        gerar PDF
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoCurta)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsLanchePreferido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmEstoque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescricaoCurta)
                </td>

                <td>
                    @item.Preco.ToString("C")
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.IsLanchePreferido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmEstoque)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.CategoriaNome)
                </td>
                <td class="btn-group" >
                    <a class="btn" asp-action="Edit" asp-route-id="@item.LancheId">
                        <img width="20" src="~/images/editar.svg">
                    </a> |
                    <a class="btn" asp-action="Details" asp-route-id="@item.LancheId">
                        <img width="20" src="~/images/lupa.svg">
                    </a>|
                    <a class="btn" asp-action="Delete" asp-route-id="@item.LancheId">
                        <img width="20" src="~/images/Delete.svg">
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
