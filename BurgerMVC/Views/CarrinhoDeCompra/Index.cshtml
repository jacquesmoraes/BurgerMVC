@model CarrinhoCompraViewModel

<div class="container">
    <div class="row checkoutForm">
        <div>
            <img src="~/images/Full-Cart-icon.png" width="30" height="35" /> <h4>Seu carrinho de compras : </h4>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>quantidade</th>
                    <th>lanche</th>
                    <th class="text-end">Preço</th>
                    <th class="text-end">Subtotal</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.carrinhoCompra.CarrinhoCompraItens)
                {
                    <tr>
                        <td class="text-start">@item.Quantidade</td>
                        <td class="text-center">@item.Lanche.Nome</td>
                        <td class="text-end">@item.Lanche.Preco.ToString("c")</td>
                        <td class="text-end">@((item.Quantidade * item.Lanche.Preco).ToString("c"))</td>
                        <td class="text-center">
                            <a asp-controller="CarrinhoDeCompras" asp-action="RemoveItemCarrinho"
                           asp-route-lancheId="@item.Lanche.LancheId"><img src="~/images/delete.png"></a>
                        </td>

                    </tr>
                }

            </tbody>

            <tfoot>
                <tr>
                    <td colspan="3" class="text-end">Total: </td>
                    <td class="text-end">@Model.CarrinhoCompraTotal.ToString("c") </td>
                </tr>
            </tfoot>
        </table>

        <div class="text-end">
            <div class="btn-group">
                <a class="btn btn-success" asp-controller="Pedido" asp-action="Checkout"> </a>
                <a class="btn btn-primary" asp-controller="Lanche" asp-action="List">continuar comprando</a>
            </div>

        </div>
    </div>


</div>